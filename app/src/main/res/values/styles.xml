<resources>

    <style name="TextView" />

    <style name="Headline">
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OnboardingHeadline" parent="Headline">
        <item name="android:textSize">@dimen/_32sdp</item>
    </style>

    <style name="DialogBody">
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="DialogHeadline" parent="Headline">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="SnackBarTitle">
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="SnackBarMessage">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="SnackBarIcon">
        <item name="tint">?attr/colorOnSurface</item>
        <item name="tintMode">src_in</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="SnackBarAction">
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_50sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_50sdp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="startIconTint">@color/colorPrimary</item>
    </style>

    <style name="DropdownInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_50sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_50sdp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconTint">@color/colorSecondary</item>
        <item name="endIconTintMode">src_in</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="startIconTintMode">src_in</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CircledIconButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:minWidth">@dimen/_12sdp</item>
        <item name="android:minHeight">@dimen/_12sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="RoundedButton">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="tintMode">src_in</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="cornerRadius">@dimen/radius_large</item>
    </style>

    <style name="SettingsCategoryHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsItemIcon">
        <item name="tint">?attr/colorError</item>
        <item name="tintMode">src_in</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:layout_width">@dimen/_24sdp</item>
    </style>

    <style name="SettingsItemSummary">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>
</resources>