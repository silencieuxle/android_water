<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:theme="@style/Theme.Water"
    android:transitionGroup="true"
    tools:background="@color/purpleLighter"
    tools:context=".ui.main.MainFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_settings"
        style="@style/Theme.Water.CircledButton"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_24sdp"
        app:cornerRadius="@dimen/_50sdp"
        app:icon="@drawable/ic_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="48dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textFontWeight="1000"
            android:textSize="@dimen/_52ssp"
            android:theme="@style/Theme.Water.TextView"
            android:transitionName="shared_element_container"
            tools:text="500ml" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_container"
                style="@style/Theme.Water.DropdownInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:dropDownVerticalOffset="@dimen/_4sdp"
                android:hint="@string/container"
                app:endIconDrawable="@drawable/ic_dropdown"
                app:startIconDrawable="@drawable/ic_weapon">

                <AutoCompleteTextView
                    android:id="@+id/actv_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownVerticalOffset="@dimen/_3sdp"
                    android:gravity="bottom"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_volume"
                style="@style/Theme.Water.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                app:startIconDrawable="@drawable/ic_volume">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tiet_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/volume"
                    android:inputType="number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_take_a_shot"
            style="@style/Theme.Water.RoundedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/add"
            app:icon="@drawable/ic_take_a_shot" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>