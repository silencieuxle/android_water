<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp"
    android:theme="@style/Theme.Water"
    tools:background="@color/purpleLighter"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/general_settings_tittle"
            style="@style/Theme.Water.Settings.Category.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="900"
            android:text="@string/general_settings" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@color/teal_700"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp">

            <ImageView
                android:id="@+id/iv_general_settings_use_bio"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/ic_bio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/image_general_description" />

            <TextView
                android:id="@+id/general_settings_use_bio_title"
                style="@style/Theme.Water.Settings.Category.Item.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:text="@string/general_settings_use_bio_auth"
                app:layout_constraintEnd_toStartOf="@id/sw_general_setting_use_bio"
                app:layout_constraintStart_toEndOf="@id/iv_general_settings_use_bio"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/general_settings_enable_bio_summary"
                style="@style/Theme.Water.Settings.Category.Item.Summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/setting_off"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/sw_general_setting_use_bio"
                app:layout_constraintStart_toEndOf="@id/iv_general_settings_use_bio"
                app:layout_constraintTop_toBottomOf="@id/general_settings_use_bio_title" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_general_setting_use_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginBottom="@dimen/_32sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_general_settings_sync"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/ic_sync"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/image_general_description" />

            <TextView
                android:id="@+id/general_settings_sync_title"
                style="@style/Theme.Water.Settings.Category.Item.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:text="@string/general_settings_sync"
                app:layout_constraintEnd_toStartOf="@id/sw_general_setting_sync"
                app:layout_constraintStart_toEndOf="@id/iv_general_settings_sync"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/general_settings_sync_summary"
                style="@style/Theme.Water.Settings.Category.Item.Summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/setting_off"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/sw_general_setting_sync"
                app:layout_constraintStart_toEndOf="@id/iv_general_settings_sync"
                app:layout_constraintTop_toBottomOf="@id/general_settings_sync_title" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_general_setting_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/battle_settings_tittle"
            style="@style/Theme.Water.Settings.Category.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/battle_settings" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@color/teal_700"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>